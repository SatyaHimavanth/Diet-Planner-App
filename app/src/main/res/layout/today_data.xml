<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#2B2B2B">

        <TextView
            android:id="@+id/nutrition_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nutrition"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Day View -->
    <LinearLayout
        android:id="@+id/day_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/previous_day"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/ic_arrow_left"-->
<!--            android:contentDescription="Previous Day"-->
<!--            android:tint="#FFFFFF" />-->

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:gravity="center" />

<!--        <ImageView-->
<!--            android:id="@+id/next_day"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/ic_arrow_right"-->
<!--            android:contentDescription="Next Day"-->
<!--            android:tint="#FFFFFF" />-->

    </LinearLayout>

    <!-- Chart Section -->
    <LinearLayout
        android:id="@+id/chart_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_view"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            android:layout_margin="5dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/meal_breakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Breakfast -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="60dp">

                    <TextView
                        android:id="@+id/breakfast_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Breakfast"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/breakfast_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0% (0 cal)"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Lunch -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="60dp">

                    <TextView
                        android:id="@+id/lunch_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lunch"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lunch_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0% (0 cal)"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Snacks -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="60dp">

                    <TextView
                        android:id="@+id/snacks_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Snacks"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/snacks_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0% (0 cal)"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Dinner -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="60dp">

                    <TextView
                        android:id="@+id/dinner_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dinner"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dinner_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0% (0 cal)"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Total calories Section -->
    <TextView
        android:id="@+id/total_calories_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart_section"
        android:padding="16dp"
        android:text="Total Calories: 0"
        android:textColor="#007FFF"
        android:textSize="16sp"
        android:gravity="center" />
    <!-- Goal Section -->
    <TextView
        android:id="@+id/net_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_calories_text"
        android:padding="16dp"
        android:text="Net Calories: 0"
        android:textColor="#007FFF"
        android:textSize="16sp"
        android:gravity="center" />
    <!-- Goal Section -->
    <TextView
        android:id="@+id/goal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/net_calories"
        android:padding="16dp"
        android:text="Goal: 2,380"
        android:textColor="#007FFF"
        android:textSize="16sp"
        android:gravity="center" />




</RelativeLayout>
